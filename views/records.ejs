<script>
	function myFunction(selTag) {
var x = selTag.options[selTag.selectedIndex].text
var array = x.split(",")
var output=`<tr>
		<th>Students</th>
		<th>Attendance</th>
	</tr>`
var data = [<%-students%>]
var std = data.filter((type)=>{return type.className === array[0]} )
	  for(var s in std){
	  	output += `
<tr>
	<td><span  >${std[s].firstName} ${ std[s].surname } </span></td>
		<td><input   type="checkbox" name="subjects" value="Mathematics" ></td>
		</tr>`
	  }
document.getElementById('customers').innerHTML = output	
}





</script>
