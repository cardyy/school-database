<script>
	function myFunction(selTag) {
		
		
var x = selTag.options[selTag.selectedIndex].text
document.getElementById('date').style.display = 'inline'
document.getElementById('btn').style.display = 'inline'
var array = x.split(",")
var output=`<tr>
		<th>Students</th>
		<th>Present</th>
		<th>Absent</th>
	</tr>`
var data = [<%-students%>]
var std = data.filter((type)=>{return type.className === array[0]} ).filter(a => a.subjectsLearnt.some(u => u.subject==array[1]))
	  for(var s in std){
	  	output += `
<tr>
	<td><span class="text" style="color:white" >${std[s].firstName} ${ std[s].surname } <input   type="text" name="name" value=${std[s].idNumber} style="color:black;display:none"></span></td>
		<td><input class="myCheck"  type="checkbox" name="boolean" value="true"  onclick="myFunction1()"></td>
		<td><input class="myCheck2"  type="checkbox" name="boolean" value="false" onclick="myFunction2()"></td>
		</tr>`
	  }
document.getElementById('customers').innerHTML = output	
var output1 = `<input  type="text"  name="options" value = "${x}" style = "display:none;"/>`
document.querySelector('.gender').innerHTML =  output1
	  var text = document.querySelectorAll(".text");
	
for(i=0;i<text.length;i++){
	   if ( text[i].style.color == 'white'){
	  document.getElementById('btn').disabled = true;
	 }}
}

function  myFunction1(){
var text = document.querySelectorAll(".text");
 var checkBox = document.querySelectorAll(".myCheck");
  var checkBox2 = document.querySelectorAll(".myCheck2");
   for(i=0;i<text.length;i++){
	if (checkBox[i].checked == true){checkBox2[i].checked = false
	  text[i].style.color = 'green'}
	  
	   if (checkBox[i].checked == false && checkBox2[i].checked == false ){text[i].style.color = 'white'}
	    if ( text[i].style.color !== 'white'){document.getElementById('btn').disabled = false;} 
	   	else{ document.getElementById('btn').disabled = true;}}
	   		
for (let a = text.length - 1; a >=0 ; a--){
	  if ( text[a].style.color == 'white'){
	  	 document.getElementById('btn').disabled = true;
}}


}

function  myFunction2(){
      var text = document.querySelectorAll(".text");
	   var checkBox = document.querySelectorAll(".myCheck2");
	    var checkBox2 = document.querySelectorAll(".myCheck");
	     for(i=0;i<text.length;i++){
	      if (checkBox[i].checked == true){
	   	   checkBox2[i].checked = false
	        text[i].style.color = 'red'}
	         if (checkBox[i].checked == false && checkBox2[i].checked == false ){
	        	text[i].style.color = 'white'}
	            if ( text[i].style.color !== 'white' ){document.getElementById('btn').disabled = false;} 
